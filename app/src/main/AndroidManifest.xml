<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rackspira.dompetku">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.MasukActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.Pemasukkan"
            android:noHistory="true" />
        <activity
            android:name=".ui.Pengeluaran"
            android:noHistory="true" />
        <activity
            android:name=".MenuPilihan.UpdateActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.SplashScreen"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Tentang"
            android:noHistory="true" />
        <activity android:name=".BackupRestoreActivity"></activity>
        <activity android:name=".ui.Diagram_keungan" />
        <activity android:name=".ui.ExportActivity" />
        <activity
            android:name=".ui.PinView"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.Setting" />
        <activity android:name=".ui.SettingPin"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>