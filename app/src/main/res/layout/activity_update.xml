<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rackspira.epenting.MenuPilihan.UpdateActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear2"
        android:background="@color/colorHead"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:textSize="16sp"
                android:textColor="@color/textWhite"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/textWhite"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tangal"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/textWhite"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Seba"
                android:textSize="16sp"
                android:textColor="@color/textWhite"
                android:id="@+id/ket_edit_view"
                android:layout_gravity="end"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp.2000"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/textWhite"
                android:id="@+id/nom_edit_view"
                android:layout_gravity="end"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12-12-2016"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/textWhite"
                android:id="@+id/tgl_edit_view"
                android:layout_gravity="end"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="8dp"
       app:cardElevation="5dp"
       app:cardCornerRadius="5dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="5dp">
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/editText_keterangan"
                   android:hint="Keterangan"
                   android:id="@+id/ket_edit"/>
           </android.support.design.widget.TextInputLayout>
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/editText_nominal"
                   android:inputType="number"
                   android:hint="Nominal"
                   android:id="@+id/nom_edit"/>
           </android.support.design.widget.TextInputLayout>
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/editText_tanggal"
                   android:hint="Tanggal"
                   android:id="@+id/tgl_edit"
                   android:focusable="false"/>
           </android.support.design.widget.TextInputLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Simpan"
                   style="@style/Widget.AppCompat.Button.Colored"
                   android:id="@+id/btn_simpan"/>
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Cancel"
                   style="@style/Widget.AppCompat.Button.Colored"
                   android:id="@+id/btn_cancel" />
           </LinearLayout>
       </LinearLayout>
   </android.support.v7.widget.CardView>
</LinearLayout>
