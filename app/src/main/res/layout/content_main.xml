<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rackspira.dompetku.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear1"
        android:background="@color/colorHead"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemasukkan"
                android:textSize="15dp"
                android:textColor="@color/textWhite"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:text="Rp.2000.000"
                android:textSize="15dp"
                android:textColor="@color/textPrimary"
                android:id="@+id/pemasukkan"
                android:layout_gravity="end"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengeluaran"
                android:textSize="15dp"
                android:textColor="@color/textWhite"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:text="Rp.2000.000"
                android:textSize="15dp"
                android:textColor="@color/textPrimary"
                android:id="@+id/pengeluaran"
                android:layout_gravity="end"
                android:textAlignment="center"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INDIKATOR"
            android:clickable="true"
            android:onClick="onClick"
            android:textColor="@color/textWhite"
            android:textSize="18dp"
            android:id="@+id/indikator"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:id="@+id/recyclerview">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
