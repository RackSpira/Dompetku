<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view_home"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/list_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ver"
            android:layout_margin="10dp">
            <com.rackspira.kal.lib.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/gambar"
                android:textSize="@dimen/cardview_text_status2"
                android:text="Pemasukkan"
                android:id="@+id/keteranganHome"
                app:fontPath="fonts/Wumbology-Book.ttf"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <com.rackspira.kal.lib.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total biaya"
                    android:textSize="@dimen/cardview_totalbayar"
                    android:id="@+id/total"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/gambar"
                    app:fontPath="fonts/Wumbology-Book.ttf"/>
                <com.rackspira.kal.lib.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nominalHome"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Rp.2000.000"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/textWhite"
                    android:background="@drawable/shape2"
                    app:fontPath="fonts/Wumbology-Book.ttf"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>