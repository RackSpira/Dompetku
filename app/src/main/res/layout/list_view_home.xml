<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_home"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/list_view">
        <com.rackspira.kal.lib.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/cardview_text_status2"
            android:text="Pemasukkan"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/keteranganHome"
            app:fontPath="fonts/Wumbology-Book.ttf"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/line"
            android:layout_margin="5dp"
            android:layout_below="@+id/keteranganHome"
            android:background="@color/colorPrimary"/>
        <com.rackspira.kal.lib.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Pengeluaran"
            android:textSize="@dimen/cardview_totalbayar"
            android:id="@+id/total"
            android:layout_below="@+id/line"
            android:layout_margin="5dp"
            app:fontPath="fonts/Wumbology-Book.ttf"/>
        <com.rackspira.kal.lib.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nominalHome"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Rp.2000.000"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line"
            android:textColor="@color/textWhite"
            android:background="@drawable/shape2"
            app:fontPath="fonts/Wumbology-Book.ttf"/>
        </RelativeLayout>

</android.support.v7.widget.CardView>