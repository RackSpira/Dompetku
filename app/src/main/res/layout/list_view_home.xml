<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_home"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/list_view">
        <com.rackspira.kal.lib.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/cardview_text_status2"
            android:text="Pemasukkan"
            android:layout_marginLeft="2dp"
            android:id="@+id/keteranganHome"
            app:fontPath="fonts/Wumbology-Book.ttf"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <com.rackspira.kal.lib.CustomTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginLeft="2dp"
               android:text="Total Pengeluaran"
               android:textSize="@dimen/cardview_totalbayar"
               android:id="@+id/total"
               app:fontPath="fonts/Wumbology-Book.ttf"/>
           <com.rackspira.kal.lib.CustomTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="2"
               android:id="@+id/nominalHome"
               android:gravity="center"
               android:paddingLeft="8dp"
               android:paddingRight="8dp"
               android:text="Rp.2000.000"
               android:textSize="15sp"
               android:textColor="@color/textWhite"
               android:background="@drawable/shape2"
               app:fontPath="fonts/Wumbology-Book.ttf"/>
       </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line"
            android:layout_margin="5dp"
            android:layout_below="@+id/nominalHome"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_below="@+id/line">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textKetHome"
                android:text="Batas Pengeluaran"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btsLimitedHome"
                android:layout_marginRight="5dp"
                android:text="10000"
                android:gravity="right"
                android:textColor="@color/bgMerah"/>
        </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>